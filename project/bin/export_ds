#!/bin/bash

if [ $# -ne 2 ]
    then
	echo Usage: $0 campagne_export nom_du_dossier 1>&2
        exit 1
fi

mkdir -p data/export/ds > /dev/null
EXPORTDIR=data/export/ds

FOLDER=$EXPORTDIR/$2

mkdir -p $FOLDER > /dev/null

DATE=$(date +%Y%m%d%H%M%S)

php symfony export:ds-civa $1 $FOLDER $DATE

ANNEE=$(echo $1 | grep -Eo ".{2}$")

STOLIG=$FOLDER"/STOLIG"$ANNEE"_"$DATE
STOENT=$FOLDER"/STOENT"$ANNEE"_"$DATE


sort -t ',' -k 1,1 $STOLIG > $STOLIG"_sorted"
sort -t ',' -k 1,1 $STOENT > $STOENT"_sorted"

cat $STOLIG"_sorted" > $STOLIG
cat $STOENT"_sorted" > $STOENT
rm $STOLIG"_sorted" $STOENT"_sorted"