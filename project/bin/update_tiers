#!/bin/bash

PATH_DB2=$1
PATH_DB2_CLOTURE=$2

echo "Import des tiers"
php symfony import:Tiers $PATH_DB2

if test "$PATH_DB2_CLOTURE"; then
    echo "Désactivation des tiers"
    php symfony tiers:desactivation $PATH_DB2_CLOTURE
fi

php symfony tiers:lier > /dev/null

echo "Mise à jour des comptes"

php symfony compte:update